<h1>It's Burger Time!</h1>
<ul>
{{#each burgers}}
<li>
	{{this.burger_name}}
	<form action="/{{this.id}}?_method=PUT" method = "POST">
	<input type = "hidden" name = "devoured" value = "true">
		<button type = "submit">EAT IT</button>
	</form>
	{{ >burger/delete-burger }}
		</li>
</ul>

<h2>Create a burger</h2>
<form class = "create-updateForm" action = "/" method="POST">
<div class="form-group">
	<label for = "burg">Burger Name:</label>
	<input type = "text" id="burg" name="burger_name">
	</div>
	<button type="submit">Add to Menu</button>
</form>